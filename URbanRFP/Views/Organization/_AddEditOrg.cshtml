@model UrbanRFP.Infrastructure.Entity.CoOrganization
@{
    List<int> myValues = new List<int>(new int[] { 1, 2, 3, 4 });
    var selectList = new SelectList(myValues);
}
<script src="~/Content/Scripts/bootstrap-datepicker.min.js"></script>
<div class="col-md-12 bdcrumb">
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li><a href="@Url.Action("Organization", "home")">Organizations</a></li>
    </ul>
</div>
<div class="mt26 mgbody">
    <div class="mgbody mt5">
        <div style="float:right;padding:0px 15px;" class="text-blue">
            <a href="/Organization" class="bckresult"><img class="bckimg" src="~/Content/images/left-arrow_2.png" /> Back to search results</a>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="mt26 clrwhite mgbody">
        <div class="col-md-12" style="margin:12px;">
            <p class="srchtxt">Organization</p>
        </div>
        <div class="col-md-12">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-12" style="margin-bottom:10px; margin:12px; padding-bottom:10px;">
            <div class="col-md-6">
                <div class="col-md-12 individualdt">@Html.LabelFor(model => model.org_legal_name, htmlAttributes: new { @class = "control-label" }):</div>
                <div class="col-md-12">
                    @Html.HiddenFor(model => model.org_key)
                    @Html.TextBoxFor(model => model.org_legal_name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.org_legal_name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-12 individualdt">@Html.LabelFor(model => model.org_website, htmlAttributes: new { @class = "control-label" }):</div>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.org_website, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.org_website, "", new { @class = "text-danger" })


                </div>
            </div>
        </div>
        <div class="col-md-12" style="margin-bottom:10px; margin:12px; padding-bottom:10px;">
            <div class="col-md-6">
                <div class="col-md-12 individualdt">@Html.LabelFor(model => model.org_description, htmlAttributes: new { @class = "control-label" }):</div>
                <div class="col-md-12">
                    @Html.TextAreaFor(model => model.org_description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.org_description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-12 individualdt">@Html.LabelFor(model => model.org_specialities, htmlAttributes: new { @class = "control-label" }):</div>
                <div class="col-md-12">
                    @Html.TextAreaFor(model => model.org_specialities, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.org_specialities, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-12" style="margin-bottom:10px; margin:12px; padding-bottom:10px;">
            <div class="col-md-6">
                <div class="col-md-12 individualdt">@Html.LabelFor(model => model.org_vendor_flag, htmlAttributes: new { @class = "control-label" }):</div>
                <div class="col-md-12">
                    @Html.DropDownListFor(model => model.org_vendor_flag, selectList, "Please select...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.org_vendor_flag, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-12 individualdt">@Html.LabelFor(model => model.org_entity_type, htmlAttributes: new { @class = "control-label" }):</div>
                <div class="col-md-12">
                    @Html.DropDownListFor(model => model.org_entity_type, selectList, "Please select...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.org_entity_type, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-12" style="margin-bottom:10px; margin:12px; padding-bottom:10px;">
            <div class="col-md-6">
                <div class="col-md-12 individualdt">@Html.LabelFor(model => model.org_special_type_flag, htmlAttributes: new { @class = "control-label" }):</div>
                <div class="col-md-12">
                    @Html.DropDownListFor(model => model.org_special_type_flag, selectList, "Please select...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.org_special_type_flag, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-12 individualdt">@Html.LabelFor(model => model.org_qualified_LG_flag, new { @class = "control-label" }):</div>
                <div class="col-md-12">
                    @Html.DropDownListFor(model => model.org_qualified_LG_flag, selectList, "Please select...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.org_qualified_LG_flag, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-12" style="margin-bottom:10px; margin:12px; padding-bottom:10px;">
            <div class="col-md-6">
                <div class="col-md-12 individualdt">@Html.LabelFor(model => model.org_date_created, htmlAttributes: new { @class = "control-label" }):</div>
                <div class="col-md-12">
                    @Html.TextBox("org_date_created", Model.org_date_created == null? string.Empty : Model.org_date_created.ToShortDateString(), new { @class = "form-control datepicker" })
                    @Html.ValidationMessageFor(model => model.org_date_created, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-12 individualdt">@Html.LabelFor(model => model.org_timezone, htmlAttributes: new { @class = "control-label" }):</div>
                <div class="col-md-12">
                    @Html.TextBoxFor(model => model.org_timezone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.org_timezone, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-12" style="margin-bottom:10px; margin:12px; padding-bottom:10px;">
            <div class="col-md-6">
                <div class="col-md-12 individualdt">@Html.LabelFor(model => model.org_federal_tax_id, htmlAttributes: new { @class = "control-label" }):</div>
                <div class="col-md-12">
                    @Html.TextBoxFor(model => model.org_federal_tax_id, new { @class = "form-control", @type = "number", @min = "0" })
                    @Html.ValidationMessageFor(model => model.org_federal_tax_id, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-12 individualdt">@Html.LabelFor(model => model.org_ann_revenue, htmlAttributes: new { @class = "control-label" }):</div>
                <div class="col-md-12">
                    @Html.TextBoxFor(model => model.org_ann_revenue, new { @class = "form-control", @type = "number", @min = "0.00", @step = "0.01" })
                    @Html.ValidationMessageFor(model => model.org_ann_revenue, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-12" style="margin-bottom:10px; margin:12px; padding-bottom:10px;">
            <div class="col-md-6">
                <div class="col-md-12 individualdt">@Html.LabelFor(model => model.org_vendor_number_of_employees, htmlAttributes: new { @class = "control-label" }):</div>
                <div class="col-md-12">
                    @Html.TextBoxFor(model => model.org_vendor_number_of_employees, new { @class = "form-control", @type = "number", @min = "0" })
                    @Html.ValidationMessageFor(model => model.org_vendor_number_of_employees, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-12 individualdt">@Html.LabelFor(model => model.org_LG_population_range, htmlAttributes: new { @class = "control-label" }):</div>
                <div class="col-md-12">
                    @Html.TextBoxFor(model => model.org_LG_population_range, new { @class = "form-control", @type = "number", @min = "0" })
                    @Html.ValidationMessageFor(model => model.org_LG_population_range, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-12 text-center" style="margin-bottom:10px; margin:12px; padding-bottom:10px;">
            <input type="submit" value="Save" class="btn btn-default" />
            <a href="/organization" class="btn btn-lg btn-warning">Cancel</a>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        $('.datepicker').datepicker({ format: 'mm/dd/yyyy', autoclose: true, todayHighlight: true });
    });
</script>