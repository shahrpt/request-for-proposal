
@{
    Layout = null;
}


@using (Ajax.BeginForm("ChangePassword", "OrgDashboard", new AjaxOptions
{
    HttpMethod = "POST",
    OnSuccess = "successChangePassword(data)",
    OnFailure = "errorAjax()"
}))
{
    @Html.AntiForgeryToken()

   
    <div class="modal-body ">
        <span class="srchtxt" id="formTitle" style="font-size:28px;">Change Password</span>
        <hr />
        <div class="">
            <div class="individualdt">
                <label class="control-label">Old Password</label>

            </div>
            <div class="">
                <input type="password" class="form-control"
                       name="OldPassword" required="required" />
            </div>

            <div class="individualdt">
                <label class="control-label">New Password</label>

            </div>
            <div class="">
                <input type="password" class="form-control"
                       name="NewPassword" required="required" />
            </div>

            <div class="individualdt">
                <label class="control-label">Confirm New Password</label>

            </div>
            <div class="">
                <input type="password" class="form-control"
                       name="ConfirmPassword" required="required" />
            </div>


        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary btnSubmit bLink"><i class="fa fa-save"></i> Save</button>
        <button type="button" class="btn btn-secondary bLink" data-dismiss="modal"><i class="fa fa-close"></i> Close</button>
    </div>
}



