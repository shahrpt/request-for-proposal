
@model ICMA.Models.co_contact

@{
    Layout = null;
}


@using (Ajax.BeginForm("SaveAddress", "OrgDashboard", new AjaxOptions
{
    HttpMethod = "POST",
    OnSuccess = "successSaveAddress(data)",
    OnFailure = "errorAjax()"
}))
{
    @Html.AntiForgeryToken()


    <input type="hidden" name="keyOrg" value="@ViewBag.keyOrg" />
    <div class="modal-body ">
        <span class="srchtxt" id="formTitle" style="font-size:28px;">Add New Address</span>
        <hr />
        <div class="">

            <div class="row">
                <div class="col-lg-6">
                    <div class="individualdt">
                        <label class="control-label">Country</label>
                    </div>
                    <div class="">
                        <input type="text" name="adr_country" required class="form-control" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="individualdt">
                        <label class="control-label">State</label>
                    </div>
                    <div class="">
                        <input type="text" name="adr_state" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="individualdt">
                        <label class="control-label">County</label>
                    </div>
                    <div class="">
                        <input type="text" name="adr_county"  class="form-control" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="individualdt">
                        <label class="control-label">Zip code</label>
                    </div>
                    <div class="">
                        <input type="text" name="adr_zip" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="individualdt">
                        <label class="control-label">City</label>
                    </div>
                    <div class="">
                        <input type="text" name="adr_city"  class="form-control" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="individualdt">
                        <label class="control-label">Address Line 1</label>
                    </div>
                    <div class="">
                        <input type="text" name="adr_line1" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="individualdt">
                        <label class="control-label">Address Line 2</label>
                    </div>
                    <div class="">
                        <input type="text" name="adr_line2"  class="form-control" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="individualdt">
                        <label class="control-label">Address Line 3</label>
                    </div>
                    <div class="">
                        <input type="text" name="adr_line3" class="form-control" />
                    </div>
                </div>
            </div>


        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary btnSubmit bLink"><i class="fa fa-save"></i> Save</button>
        <button type="button" class="btn btn-secondary bLink" data-dismiss="modal"><i class="fa fa-close"></i> Close</button>
    </div>
}



