                                                    </ul>
                                                </td>
                                                <td class="txtcenter">
                                                    @if (rfp.rfp_close_date > DateTime.Now)
                                                    {
                                                        <button type='button' class='tbltodoscorebtn'>Score</button>
                                                    }
